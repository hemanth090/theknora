{
  "name": "KnoRa",
  "description": "AI Knowledge Assistant - Intelligent Document Analysis with Self-Hosted Deployment",
  "repo": "https://github.com/hemanth090/theknora.git",
  "branch": "main",
  "services": [
    {
      "name": "knora-backend",
      "dockerfile": "backend/Dockerfile",
      "port": 8000,
      "variables": {
        "RUST_LOG": "info",
        "GROQ_API_KEY": "",
        "AUTH_TOKEN": "",
        "DEFAULT_LLM_MODEL": "mixtral-8x7b-32768",
        "EMBEDDING_MODEL": "all-MiniLM-L6-v2",
        "PORT": "8000"
      },
      "volumes": [
        {
          "name": "vector-store",
          "path": "/app/data/vector_store"
        },
        {
          "name": "uploads",
          "path": "/app/data/uploads"
        }
      ]
    }
  ]
}
